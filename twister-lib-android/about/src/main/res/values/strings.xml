<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE resources [
	<!ENTITY nbsp "&#160;"><!-- non-breaking space, http://www.fileformat.info/info/unicode/char/00A0/index.htm -->
	<!ENTITY lquot "&#8220;"><!-- left double quotation mark, http://www.fileformat.info/info/unicode/char/201C/index.htm -->
	<!ENTITY rquot "&#8221;"><!-- right double quotation mark, http://www.fileformat.info/info/unicode/char/201D/index.htm -->
	<!ENTITY LI "\n&#8195;&#8226;&#8194;"><!-- m-space (\u2003) bullet (\u2022) n-space (\u2002) -->
	<!ENTITY LLI "\n&#8195;&#8195;&#8226;&#8194;"><!-- 2x m-space (\u2003) bullet (\u2022) n-space (\u2002) -->
	]>
<!--
To use this:
 * Add net.twisterrob.android.activity.AboutActivity to the manifest (see lib's manifest)
 * Define about_licenses, about_licenses_content string arrays
 * Optionally define about_tips, about_faq strings
-->
<resources>

	<string name="about_title">About &amp; Help</string>

	<string name="about_application_title">Application</string>
	<string name="about_version">Version %1$s</string>
	<string name="about_feedback">Feedback? <a href="#">Tap here</a>!</string>
	<string name="about_feedback_fail">Cannot send feedback to %s, do you have an e-mail app?</string>
	<string name="about_feedback_subject">%1$s feedback</string>

	<!-- %1: app_name, %2: app_package, %3: app_version -->
	<string name="about_feedback_body">Package: %1$s\nVersion: %2$s\n\nHey,\nI have some comments regarding your app:\n</string>

	<string name="about_tips_title">Tips and Tricks</string>
	<string name="about_tips"><!--
		\n\n<big><b>Section</b></big>
		&LI;Tip description 1
		&LI;Tip description 2 referencing &#8220;UI part&#8221; to use
		&LI;Tip description 3 containing <tt>code</tt>
	--></string>

	<string name="about_faq_title">FAQ (Frequently Asked Questions)</string>
	<string name="about_faq"><!--
		\n\n<b>What is this application?</b>
		\nDescription of the application
		\n\n<b>How can I leave feedback? What is feedback?</b>
		\nTap on the link below the application name/version in the About.
		\nFeel free to send any kind of comment, request, suggestion, error report;
		just about any thought regarding this application.
		\n\n<b>Further question?</b>
		\nAnd answer
	--></string>

	<string name="about_help_title">Help</string>
	<string name="about_help"><!--
		\n\n\n<big><b>Section</b></big>

		\n\n<b>Subsection</b>
		Blah blah.

		\n\n<b>Subsection</b>
		Blah blah.
	--></string>

	<string name="about_licenses_title">Acknowledgements and Licenses</string>
	<string name="about_licenses_missing">Missing License</string>

	<string-array name="about_licenses" translatable="false"><!--
		<item>@string/about_license_glide_title</item>
		<item>@string/about_license_libjpeg_title</item>
		<item>@string/about_license_stackoverflow_title</item>
		<item>@string/about_license_asset_studio_title</item>
		<item>@string/about_license_gms_title</item>
	--></string-array>

	<string-array name="about_licenses_content" translatable="false"><!--
		<item>@string/about_license_glide</item>
		<item>@string/about_license_libjpeg</item>
		<item>@string/about_license_stackoverflow</item>
		<item>@string/about_license_asset_studio</item>
		<item>@string/about_license_gms</item>
	--></string-array>

</resources>
